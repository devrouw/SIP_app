<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/utama_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentBottom="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            card_view:cardBackgroundColor="@color/blue"
            card_view:cardCornerRadius="4dp"
            card_view:cardUseCompatPadding="false"
            card_view:elevation="5dp">

            <LinearLayout
                android:id="@+id/lay_purpose_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Data Penghuni"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:text="NIK"
                        android:layout_weight="7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_nik"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="8dp"
                        android:inputType="numberDecimal"
                        android:background="@drawable/bg_edittext_rounded"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Nama Lengkap"
                        android:layout_weight="7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_nama_lengkap"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:paddingHorizontal="8dp"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_edittext_rounded"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_marginEnd="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_tempat_lahir"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tempat"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_tempat"
                                android:layout_below="@id/tv_tempat_lahir"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:paddingHorizontal="8dp"
                                android:background="@drawable/bg_edittext_rounded"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_tgl_lahir"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Lahir"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/et_tgl"
                                android:layout_below="@id/tv_tgl_lahir"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:paddingHorizontal="8dp"
                                android:background="@drawable/bg_edittext_rounded"/>
                        </RelativeLayout>

                        <ImageView
                            android:id="@+id/bt_calendar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="6dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_baseline_calendar"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Status Kawin"
                        android:layout_weight="7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_status_kawin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:paddingHorizontal="8dp"
                        android:textColor="@color/black"
                        android:background="@drawable/bg_edittext_rounded"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Kewarganegaraan"
                        android:layout_weight="7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_kewarganegaraan"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/bg_edittext_rounded"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Jenis Kelamin"
                        android:layout_weight="7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_jenis_kelamin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/bg_edittext_rounded"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Pekerjaan"
                        android:layout_weight="7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_pekerjaan"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/bg_edittext_rounded"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Golongan Darah"
                        android:layout_weight="7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_gol_darah"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/bg_edittext_rounded"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="30dp"
                        android:text="Keterangan Tambahan"
                        android:layout_weight="7"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/et_keterangan"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:maxLines="4"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:paddingHorizontal="8dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_edittext_rounded"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/bt_submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="80dp"
                        android:background="@color/white"
                        android:textColor="@color/colorPrimaryDark"
                        android:textAllCaps="false"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:text="Submit Data"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>