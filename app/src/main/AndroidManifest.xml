<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lollipop.sip">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".view.ApplicationController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.SIP">
        <activity android:name=".view.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ui.LoginActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.ui.PenghuniActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.ui.EditPenghuniActivity"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.ui.BangunanActivity"
            android:screenOrientation="fullSensor" />
    </application>

</manifest>